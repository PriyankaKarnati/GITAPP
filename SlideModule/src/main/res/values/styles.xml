<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/LayoutColour</item>
        <item name="popupMenuStyle">@style/PopUpMenu</item>
    </style>

    <style name="PopUpMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">#003C3C3C</item>
        <item name="android:textColor">#FDDCD2</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_width">wrap_content</item>


    </style>

</resources>
